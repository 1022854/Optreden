{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h3>Alle optredens</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Naam</th>
            <th>Genre</th>
            <th>Prijs</th>
            <th>Datum</th>
            <th>Aanvang</th>
            <th>Zaal</th>
            <th>Stoel</th>
        </tr>
        </thead>
    {% for optreden in optredens %}
        <tr>
        <td>{{ optreden.naam }}</td>
        <td>{{ optreden.genre}}</td>
        <td>{{ optreden.prijs }}</td>
        <td>{{ optreden.datum}}</td>
        <td>{{ optreden.aanvang}}</td>
        <td>{{ optreden.zaal}}</td>
